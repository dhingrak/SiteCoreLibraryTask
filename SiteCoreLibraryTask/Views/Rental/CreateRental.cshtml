
@model Rental

@{
    ViewData["Title"] = "Rental";
}


@if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Rental</h2>
        </div>

        <div class="mb-3">
            <label asp-for="UserEmailId"></label>
            <input asp-for="UserEmailId" class="form-control" />
            <span asp-validation-for="UserEmailId" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="BookId"></label>
            <input asp-for="BookId" class="form-control" />
            <span asp-validation-for="BookId" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>

        <a asp-controller="Rental" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Rental List
        </a>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }

}


