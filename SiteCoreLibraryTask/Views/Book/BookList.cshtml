@model SiteCoreLibraryTask.Models.AllModels

@{
    ViewData["Title"] = "Books";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                Create New Book
            </a>
        </div>
    </div>

    <br /><br />
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Book Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Author 1</th>
                        <th scope="col">Author 2</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>

                    </tr>
                </thead>
                <tbody>

                    @{
                        if(Model.bookList != null && Model.bookList.Count > 0)
                        {
                            foreach(var item in Model.bookList)
                            {
                                <tr>
                                    <td>@item.BookId</td>
                                    <td>@item.Title</td>
                                    <td>@item.FirstAuthorName</td>
                                    <td>@item.SecondAuthorName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                </tr>
                            }
                        }
                    }
                
                </tbody>
            </table>
        </div>
    </div>

</div>
